<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for image upload -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NavigationDrawer">

        <!-- MainActivity (Launch Activity) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegistrationActivity -->
        <activity
            android:name=".StudentRegistrationActivity"
            android:exported="true" />

        <!-- Teacher Registration Activity -->
        <activity
            android:name=".TeacherRegistrationActivity"
            android:exported="false" />

        <!-- HomepageActivity -->
        <activity
            android:name=".HomepageActivity"
            android:exported="false" />

        <!-- Additional Activities -->
        <!-- If you have activities for the following fragments, declare them here -->
<!--        <activity-->
<!--            android:name=".ViolationsActivity"-->
<!--            android:exported="false" />-->

        <activity
            android:name=".ScheduleActivity"
            android:exported="false" />

        <!-- Add any additional activities you have for your fragments -->

    </application>

</manifest>
